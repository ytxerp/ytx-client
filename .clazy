# Clazy configuration for Qt projects

# Check levels (0-3, higher = more checks)
# level0: Very few false positives, 100% safe
# level1: Few false positives
# level2: Can have false positives, but very useful
# level3: Experimental, many false positives

level2

enable-checks=container-inside-loop,
              inefficient-qlist,
              qstring-arg,
              qstring-allocations,
              reserve-candidates,
              detaching-temporary

disable-checks=qproperty-without-notify,
               missing-qobject-macro,
               old-style-connect,
               connect-by-name
